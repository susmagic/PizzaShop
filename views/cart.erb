<h2>Your cart</h2>

<table class="table table-striped"> 
    <thead> 
        <tr> 
            <th>Name</th> 
            <th>Price</th> 
            <th>Qty</th> 
        </tr> 
        </thead> 
        <tbody>

        <% total_price = 0 %>
        <% total_qty = 0 %>
        <% @items.each do |item| %>
            <tr> 
                <th><%= item[0].title %></th> 
                <td><%= item[0].price %></td> 
                <td><%= item[1] %></td> 
            </tr>
            <%total_price += item[0].price * item[1].to_i%>
            <%total_qty += item[1].to_i %>
        <% end %>

            <tr> 
                <th></th> 
                <td>Total: <%= total_price %></td> 
                <td><%= total_qty %></td> 
            </tr>

        </tbody>
</table>

<form action="/place_order" method="POST">

    <input name="order[order_input]" type="hidden" value="<%=@orders_input%>"/>

  <div class="form-group">
    <label>Name</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Введите имя">
  </div>

  <div class="form-group">
    <label>Phone</label>
    <input name="prder[phone]" type="text" class="form-control" placeholder="Введите телефон">
  </div>

  <div class="form-group">
    <label>Delivery Adress</label>
    <textarea name="order[phone]" type="text" class="form-control" placeholder="Введите адресок доставочки"></textarea>
  </div>

  <button type="submit" class="btn btn-success btn-lg" >Place this order!</button>
</form>