<h2>Hello</h2>

<div class="row">

    <% @products.each do |p| %>
    <div class="col-md-3">
        <div>
            <%= p.title %>
        </div>

        <div>
            <img src="<%= p.path_to_image %>">
        </div>

        <div>
            <%= p.description %>
        </div>

        <div>
            Size: <%= p.size %>
        </div>

        <div>
            Price: <%= p.price %>
        </div>

        <div>
            <button class="btn btn-sm btn-info" onClick="add_to_cart(<%= p.id %>)">Add to cart!</button>
        </div>
    </div>
    <% end %>

</div>
<br/>
<button class="btn btn-success" onClick="something()">Click me!</button>